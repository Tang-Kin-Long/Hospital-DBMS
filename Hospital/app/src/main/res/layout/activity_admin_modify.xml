<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".admin_modify">

    <TextView
        android:id="@+id/admin_modify_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Information"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/admin_modify_pwd_label"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Password:"
        android:textSize="25sp"
        android:gravity="center_vertical"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/admin_modify_pwd_input"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:autofillHints="Input password"
        android:hint="Input password"
        android:inputType="numberPassword"
        android:textSize="25sp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toEndOf="@id/admin_modify_pwd_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/admin_modify_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/commit"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/admin_modify_pwd_label"/>

    <Button
        android:id="@+id/admin_modify_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textSize="25sp"
        android:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintTop_toBottomOf="@id/admin_modify_commit"/>


</androidx.constraintlayout.widget.ConstraintLayout>